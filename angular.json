{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "front": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "css",
          "skipTests": true,
          "changeDetection": "OnPush"
        },
        "@schematics/angular:class": { "skipTests": true },
        "@schematics/angular:directive": { "skipTests": true },
        "@schematics/angular:guard": { "skipTests": true },
        "@schematics/angular:interceptor": { "skipTests": true },
        "@schematics/angular:pipe": { "skipTests": true },
        "@schematics/angular:resolver": { "skipTests": true },
        "@schematics/angular:service": { "skipTests": true }
      },
      "root": "project",
      "sourceRoot": "project/src",
      "prefix": "app",
      "i18n": {
        "locales": {
          "en-IN": { "translation": "project/locale/messages.en.xlf" }
        }
      },
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "project/src/main.ts",
            "polyfills": ["zone.js", "@angular/localize/init"],
            "tsConfig": "project/tsconfig.app.json",
            "assets": [
              { "glob": "**/*", "input": "public" }
            ],
            "styles": ["project/src/styles.css"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                { "type": "initial", "maximumWarning": "500kB", "maximumError": "1MB" },
                { "type": "anyComponentStyle", "maximumWarning": "4kB", "maximumError": "8kB" }
              ],
              "outputHashing": "all",
              "optimization": { "styles": { "inlineCritical": false } }
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "fileReplacements": [
                {
                  "replace": "project/src/environments/environment.ts",
                  "with": "project/src/environments/environment.development.ts"
                }
              ]
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": { "buildTarget": "front:build:production" },
            "development": { "buildTarget": "front:build:development" }
          },
          "options": {
            "proxyConfig": "project/proxy.conf.js"
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n",
          "options": { "outputPath": "project/locale", "format": "xlf" }
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing", "@angular/localize/init"],
            "tsConfig": "project/tsconfig.spec.json",
            "assets": [{ "glob": "**/*", "input": "public" }],
            "styles": ["project/src/styles.css"],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["project/**/*.ts", "project/**/*.html"],
            "eslintConfig": "eslint.config.js"
          }
        }
      }
    }
  },
  "cli": {
    "schematicCollections": ["angular-eslint"],
    "analytics": false
  }
}
